    private string ObtenerNombreFrecuencia(Dictionary<string, object> indicador)
    {
        if (indicador == null) return "";


        var lookup = frecuencia.ToDictionary(
        item => ObtenerValor(item, "id"),
        item => item
        );

        if (indicador.TryGetValue("fkidfrecuencia", out var idFrecuencia))
        {
            if (lookup.TryGetValue($"{idFrecuencia}", out var freq))
            {
                if (freq.TryGetValue("nombre", out var nombre))
                {
                    return nombre?.ToString() ?? "";
                }
            }
        }

        return "";
    }


    private string ObtenerNombresResponsables(Dictionary<string, object> indicador)
    {
        if (indicador == null) return "";

        // Crear diccionario lookup de responsables: clave = id indicador, valor = lista de responsables
        var lookupResponsables = responsablesporindicador
        .GroupBy(r => ObtenerValor(r, "fkidindicador"))
        .ToDictionary(
        g => g.Key,
        g => g.ToList()
        );

        // Crear diccionario lookup de actores: clave = id, valor = diccionario de actor
        var lookupActores = actor.ToDictionary(
        a => ObtenerValor(a, "id"),
        a => a
        );

        if (indicador.TryGetValue("id", out var idIndicador))
        {
            if (lookupResponsables.TryGetValue($"{idIndicador}", out var responsables))
            {
                var nombres = new List<string>(responsablesporindicador.Count);

                foreach (var resp in responsables)
                {
                    if (resp.TryGetValue("fkidresponsable", out var idResponsable))
                    {
                        if (lookupActores.TryGetValue($"{idResponsable}", out var actor))
                        {
                            if (actor.TryGetValue("nombre", out var nombre))
                            {
                                nombres.Add(nombre?.ToString() ?? "");
                            }
                        }
                    }
                }

                return string.Join(", ", nombres);
            }
        }

        return "";
    }



    private void ToggleActor(string id)
    {
        var actorSeleccionado = actor.FirstOrDefault(a => ObtenerValor(a, "id") == id);
        if (actorSeleccionado != null)
        {
            var yaExiste = responsablesGuardar.Any(r => ObtenerValor(r, "id") == id);
            if (yaExiste)

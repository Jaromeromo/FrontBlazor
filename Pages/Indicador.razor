            frecuencia = respuesta_frecuencia;
            Indicadores = respuesta_Indicadores;
            inidcadoresSeleccionado = Indicadores.ToDictionary(p => p, p => false);
        }
        catch (Exception ex)
        {
            errorMensaje = $"Error al cargar Actor: {ex.Message}";
